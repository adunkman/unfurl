{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "docker-compose up api || true",
    "postinstall": "docker-compose build",
    "build": "docker-compose run api run build",
    "deploy": "docker-compose run terraform apply || true",
    "lint": "prettier -c .",
    "lint:fix": "prettier -w .",
    "test": "docker-compose run api test"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
